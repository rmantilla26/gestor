<p id="notice"><%= notice %></p>

<h3><%= @project.name %></h3>
<h5><%= @project.description %></h5>

<p>
	<strong>Start date:</strong>
	<%= @project.start_date %>
</p>

<p>
	<strong>End date:</strong>
	<%= @project.end_date %>
</p>

<%= link_to 'Edit', edit_project_path(@project) %> |
<%= link_to 'Back', projects_path %>


<h3>Members<span>
<%= link_to('+', new_project_project_employee_path(@project) , :class => 'btn btn-sm btn-default') %>
</span>
</h3>
<table class="table">
  <thead>
    <tr>
      <th>Role</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <%= render @project.project_employees %>
  </tbody>
</table>


<h3>Audits<span>
<%= link_to('+', new_project_audit_path(@project) , :class => 'btn btn-sm btn-default') %>
</span>
</h3>
<table class="table">
  <thead>
    <tr>
      <th>Observation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <%= render @project.audits %>
  </tbody>
</table>
