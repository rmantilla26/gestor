<h1>Listing Project Employees</h1>

<table>
  <thead>
    <tr>
      <th>Project</th>
      <th>Employee</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @project_employees.each do |project_employee| %>
      <tr>
        <td><%= project_employee.project %></td>
        <td><%= project_employee.employee %></td>
        <td><%= project_employee.role %></td>
        <td><%= link_to 'Show', project_employee %></td>
        <td><%= link_to 'Edit', edit_project_employee_path(project_employee) %></td>
        <td><%= link_to 'Destroy', project_employee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

