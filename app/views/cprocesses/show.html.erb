<%= link_to('+', new_cprocess_activity_path(@cprocess) , :class => 'btn btn-sm btn-default') %>
</span>
</h3>
<table class="table">
  <thead>
    <tr>
      <th>Order</th>
      <th>Responsible</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <%= render @cprocess.activities %>
  </tbody>
</table>